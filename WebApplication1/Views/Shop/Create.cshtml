
@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container bg-info">

        <h2>افزودن دانش آموز</h2>
        <form action="#" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="name">نام:</label>
                <input type="text" class="form-control" id="name" placeholder="نام محصول را وارد کنید" name="name">
            </div>

            <div class="form-group">
                <label for="surname">قیمت</label>
                <input type="text" class="form-control" id="surname" placeholder="قیمت را وارد کنید" name="surname">
            </div>

            <div class="form-group">
                <label for="age">کتگوری:</label>
                <input type="number" class="form-control" id="age" placeholder="نام کتگوری را وارد کنید" name="age">
            </div>
            <button type="submit" class="btn btn-default">ایجاد</button>
        </form>
    </div>

</body>
</html>

